{
  "openapi": "3.1.0",
  "info": {
    "version": "1.0.0",
    "title": "SlimMom API",
    "license": {
      "name": "Apache 2.0",
      "url": "http://www.apache.org/licenses/LICENSE-2.0.html"
    },
    "description": "API documentation for authentication, user profile, calorie tracker and products\n"
  },
  "servers": [
    {
      "url": "https://slimmom-backend-o5ma.onrender.com",
      "description": "Production server"
    }
  ],
  "tags": [
    {
      "name": "Auth",
      "description": "Authentication and user management"
    },
    {
      "name": "User",
      "description": "User management operations"
    },
    {
      "name": "Calorie",
      "description": "Calorie management operations"
    },
    {
      "name": "Products",
      "description": "Products management operations"
    }
  ],
  "security": [
    {
      "bearerAuth": []
    }
  ],

  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    },
    "schemas": {
      "User": {
        "type": "object",
        "properties": {
          "username": { "type": "string" },
          "email": { "type": "string" },
          "password": { "type": "string" },
          "userData": {
            "type": "object",
            "properties": {
              "height": { "type": "number" },
              "age": { "type": "number" },
              "currentWeight": { "type": "number" },
              "desiredWeight": { "type": "number" },
              "bloodType": { "type": "integer", "enum": [1, 2, 3, 4] }
            }
          }
        }
      },
      "Product": {
        "type": "object",
        "properties": {
          "categories": { "type": "string" },
          "weight": { "type": "number" },
          "title": { "type": "string" },
          "calories": { "type": "number" },
          "groupBloodNotAllowed": {
            "type": "array",
            "items": { "type": "boolean" }
          }
        }
      },
      "DailyFoodEntry": {
        "type": "object",
        "properties": {
          "userId": { "type": "string" },
          "date": { "type": "string", "format": "date" },
          "foods": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "productId": { "type": "string" },
                "productName": { "type": "string" },
                "weight": { "type": "number" },
                "calories": { "type": "number" },
                "addedAt": { "type": "string", "format": "date-time" }
              }
            }
          },
          "totalCalories": { "type": "number" },
          "targetCalories": { "type": "number" },
          "remainingCalories": { "type": "number" }
        }
      },
      "CalorieEntry": {
        "type": "object",
        "properties": {
          "userId": { "type": "string" },
          "left": { "type": "number" },
          "consumed": { "type": "number" },
          "dailyRate": { "type": "number" },
          "nOfNormal": { "type": "number" },
          "notAllowedProducts": {
            "type": "array",
            "items": { "type": "string" }
          },
          "eatenFoods": {
            "type": "array",
            "items": { "type": "object" }
          }
        }
      }
    }
  },
  "paths": {
    "/auth/register": {
      "post": {
        "summary": "Register a new user",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": { "$ref": "#/components/schemas/User" }
            }
          }
        },
        "responses": {
          "201": { "description": "User registered successfully" },
          "400": { "description": "Invalid input" }
        }
      }
    },
    "/auth/login": {
      "post": {
        "summary": "Login user",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "email": { "type": "string" },
                  "password": { "type": "string" }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Login successful",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": { "token": { "type": "string" } }
                }
              }
            }
          },
          "401": { "description": "Invalid credentials" }
        }
      }
    },

    "/user/profile": {
      "get": {
        "summary": "Get logged-in user profile",
        "security": [{ "bearerAuth": [] }],
        "responses": {
          "200": {
            "description": "User profile retrieved",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": { "message": { "type": "string" } }
                }
              }
            }
          }
        }
      }
    },
    "/calorie/privatePost": {
      "post": {
        "summary": "Create private calorie entry",
        "security": [{ "bearerAuth": [] }],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "userData": { "$ref": "#/components/schemas/User" }
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Private calorie entry created",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/CalorieEntry" }
              }
            }
          }
        }
      }
    },
    "/calorie/private/{date}/allGet": {
      "get": {
        "summary": "Get all foods for a date",
        "security": [{ "bearerAuth": [] }],
        "parameters": [
          {
            "in": "path",
            "name": "date",
            "required": true,
            "schema": { "type": "string", "format": "date" }
          }
        ],
        "responses": {
          "200": {
            "description": "Foods retrieved",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": { "type": "string" },
                    "data": {
                      "type": "array",
                      "items": { "$ref": "#/components/schemas/DailyFoodEntry" }
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/calorie/private/{date}/addPost": {
      "post": {
        "summary": "Add food for a date",
        "security": [{ "bearerAuth": [] }],
        "parameters": [
          {
            "in": "path",
            "name": "date",
            "required": true,
            "schema": { "type": "string", "format": "date" }
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "productId": { "type": "string" },
                  "productName": { "type": "string" },
                  "weight": { "type": "number" },
                  "calories": { "type": "number" }
                }
              }
            }
          }
        },
        "responses": { "201": { "description": "Food added successfully" } }
      }
    },
    "/calorie/private/{date}/remove/{id}Delete": {
      "delete": {
        "summary": "Remove food by ID",
        "security": [{ "bearerAuth": [] }],
        "parameters": [
          {
            "in": "path",
            "name": "date",
            "required": true,
            "schema": { "type": "string", "format": "date" }
          },
          {
            "in": "path",
            "name": "id",
            "required": true,
            "schema": { "type": "string" }
          }
        ],
        "responses": { "204": { "description": "Food removed successfully" } }
      }
    },
    "/calorie/publicPost": {
      "post": {
        "summary": "Create public calorie entry",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "userData": { "$ref": "#/components/schemas/User" }
                }
              }
            }
          }
        },
        "responses": {
          "201": { "description": "Public calorie entry created" }
        }
      }
    },
    "/productsGet": {
      "get": {
        "summary": "Get all products",
        "responses": {
          "200": {
            "description": "Products fetched",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": { "type": "string" },
                    "data": {
                      "type": "array",
                      "items": { "$ref": "#/components/schemas/Product" }
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/products/searchGet": {
      "get": {
        "summary": "Search products",
        "parameters": [
          { "in": "query", "name": "keyword", "schema": { "type": "string" } }
        ],
        "responses": {
          "200": {
            "description": "Filtered products",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": { "type": "string" },
                    "data": {
                      "type": "array",
                      "items": { "$ref": "#/components/schemas/Product" }
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  },
  "Error": {
    "type": "object",
    "required": ["status", "message"],
    "properties": {
      "status": {
        "type": "integer",
        "description": "HTTP status code",
        "example": 401
      },
      "message": {
        "type": "string",
        "description": "Error message",
        "example": "Invalid credentials"
      }
    }
  }
}
